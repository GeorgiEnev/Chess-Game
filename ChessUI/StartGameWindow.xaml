<Window x:Class="YourNamespace.StartGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Game" Height="500" Width="900" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="Window_Loaded">
	<Grid>
		<!-- Background Gradient -->
		<Grid.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
				<GradientStop Color="#FF232526" Offset="0"/>
				<GradientStop Color="#FF414345" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<!-- Chess Piece Icon (Unicode) -->
			<TextBlock x:Name="IconText"
                       Text="♔"
                       FontSize="72"
                       Foreground="#FFD4AF37"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"
                       Opacity="0"
                       RenderTransformOrigin="0.5,0.5">
				<TextBlock.RenderTransform>
					<TranslateTransform Y="40"/>
				</TextBlock.RenderTransform>
			</TextBlock>
			<!-- Title -->
			<TextBlock x:Name="TitleText"
                       Text="Chess Master"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"
                       Opacity="0"
                       RenderTransformOrigin="0.5,0.5">
				<TextBlock.RenderTransform>
					<TranslateTransform Y="40"/>
				</TextBlock.RenderTransform>
			</TextBlock>
			<!-- Subtitle -->
			<TextBlock Text="Ready to make your move?"
                       FontSize="18"
                       Foreground="#FFB0B0B0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>
			<!-- Glassy Card for Button -->
			<Border CornerRadius="16"
                    Background="#40FFFFFF"
                    Padding="32"
                    Margin="0,0,0,0">
				<Border.Effect>
					<DropShadowEffect Color="#80000000" BlurRadius="16" ShadowDepth="4"/>
				</Border.Effect>
				<Button x:Name="StartGameButton"
                        Content="Start Game"
                        Width="220"
                        Height="56"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="StartGameButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
					<Button.RenderTransform>
						<ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
					</Button.RenderTransform>
					<Button.Effect>
						<DropShadowEffect Color="#80000000" BlurRadius="10" ShadowDepth="2"/>
					</Button.Effect>
					<Button.Triggers>
						<EventTrigger RoutedEvent="Button.MouseEnter">
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.05" Duration="0:0:0.15"/>
									<DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.05" Duration="0:0:0.15"/>
									<DoubleAnimation Storyboard.TargetProperty="(Button.Effect).(DropShadowEffect.BlurRadius)"
                                                     To="18" Duration="0:0:0.15"/>
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
						<EventTrigger RoutedEvent="Button.MouseLeave">
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.0" Duration="0:0:0.15"/>
									<DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.0" Duration="0:0:0.15"/>
									<DoubleAnimation Storyboard.TargetProperty="(Button.Effect).(DropShadowEffect.BlurRadius)"
                                                     To="10" Duration="0:0:0.15"/>
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</Button.Triggers>
				</Button>
			</Border>
		</StackPanel>
	</Grid>
</Window>